#include <stdio.h>
int main(){
    int idade, matricula;
    float altura;
    char nome[50];

    printf("Digite sua idade: \n");
    scanf("%d", &idade);

    printf("Agora informe a sua altura: \n");
    scanf("%f", &altura);

    printf("Informe seu nome: \n");
    scanf("%c\n", &nome);

    printf("Digite sua matrícula: \n");
    scanf("%d\n", &matricula);

    printf("Nome do aluno: %s - Matrícula: %d\n", nome, matricula);
    printf("Idade: %d - Altura: %f\n", idade, altura);

    return 0;
    }
